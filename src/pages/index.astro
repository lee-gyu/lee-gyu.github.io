---
import DefaultLayout from "src/astro/layouts/DefaultLayout.astro";
import Career from "src/astro/widget/Career.astro";
import Banner from "src/astro/widget/Banner.astro";
import Intro from "src/astro/widget/Intro.astro";
---

<DefaultLayout>
    <main class="main-page">
        <section class="page">
            <h1 class="title">웹 개발자</h1>
            <h4 class="sub-title">이규철</h4>
            <section class="section">
                <h4>주 업무</h4>
                <Intro/>
            </section>
            <section class="section" role="article">
                <h4>경력</h4>
                <Career />
            </section>
            <section role="banner">
                <Banner/>
            </section>
        </section>
    </main>
</DefaultLayout>

<style>

    html, body {
        scrollbar-width: none;
        scroll-snap-type: x mandatory;
        scroll-behavior: smooth;

        &::-webkit-scrollbar {
            display: none;
        }
    }

    .main-page {
        width: 100%;
        display: flex;
        flex-wrap: nowrap;
    }

    .page {
        padding: 10vh 12vw;
        min-width: 100vw;
        scroll-snap-align: start;
    }

    *:focus-visible {
        outline-offset: 2px;
    }
    
    h1, h4 {
        font-weight: 500;
    }

    .title {
        font-size: theme("fontSize.3xl");
    }

    .sub-title {
        font-size: theme("fontSize.2xl");
    }

    .section {
        font-weight: 300;
        word-break: keep-all;
        margin: 1rem 0;
        max-width: 30em;
    }

    @media print {

        [data-page="first"] {
            height: auto;
        }

        .content-wrapper {
            padding: 0;
        }

        @page {
            margin: 2cm 2.5cm;
        }
    }

</style>