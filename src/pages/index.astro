---
import DefaultLayout from "src/astro/layouts/DefaultLayout.astro";
import Projects from "src/astro/widget/Projects.astro";
import Career from "src/astro/widget/Career.astro";
import Banner from "src/astro/widget/Banner.astro";
import Intro from "src/astro/widget/Intro.astro";
---

<DefaultLayout>
    <main>
        <div class="content-wrapper" data-pin-point="about" data-page="first">
            <h1 class="title">웹 개발자</h1>
            <h4 class="sub-title">이규철</h4>
            <section class="section">
                <Intro/>
            </section>
            <section class="section" role="article">
                <h4>경력</h4>
                <Career />
            </section>
            <section role="banner">
                <Banner/>
            </section>
        </div>
        <div class="content-wrapper">
            <Projects/>
        </div>
    </main>
</DefaultLayout>

<style>

    [data-page="first"] {
        height: 100vh;
    }

    .content-wrapper {
        padding: 10vh 12vw;
    }

    *:focus-visible {
        outline-offset: 2px;
    }
    
    h1, h4 {
        font-weight: 500;
    }

    .title {
        font-size: theme("fontSize.3xl");
    }

    .sub-title {
        font-size: theme("fontSize.2xl");
    }

    .section {
        font-weight: 300;
        word-break: keep-all;
        margin: 1rem 0;
        max-width: 30em;
    }

    @media print {

        [data-page="first"] {
            height: auto;
        }

        .content-wrapper {
            padding: 0;
        }

        @page {
            margin: 2cm 2.5cm;
        }
    }

</style>