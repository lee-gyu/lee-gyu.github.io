---
import { useTranslations } from "src/i18n/utils";
import { listItemsCss } from "src/styles/component-css";

const t = useTranslations(Astro.currentLocale as Lang);

const careerData = [
    {
        period: t("career.0.header"),
        content: t("career.0.content"),
        desc: t("career.0.content.desc"),
    },
    {
        period: t("career.1.header"),
        content: t("career.1.content"),
        desc: t("career.1.content.desc"),
    },
];
---

<ul class={listItemsCss}>
    {
        careerData.map(({ period, content, desc }) => (
            <li class="career-item">
                <p class="career-period">{period}</p>
                <p class="career-company">{content}</p>
                <p class="career-desc">{desc}</p>
            </li>
        ))
    }
</ul>

<style>
    .career-period {
        font-size: 0.875rem;
        line-height: 1.5;
    }
    .career-item {
        margin: 0.25rem 0 0.75rem 0;
        line-height: 1.5;
    }
    .career-company {
        font-weight: 500;
    }
    .career-desc {
        font-size: 0.875rem;
        white-space: pre-wrap;
    }

    .keyword {
        margin-left: -0.5rem;
    }
</style>
