---
const bannerList = [
    ["https://medium.com/@gyuc219", "vsc-book", "Blog", "blog link"],
    ["https://github.com/lee-gyu", "vsc-github", "GitHub", "github link"],
];
---

<ul class="banner-wrapper">
    {
        bannerList.map(([url, icon, text, title]) => (
            <li>
                <a class="banner-item" href={url} title={title} target="_blank">
                    {text}
                </a>
            </li>
        ))
    }
</ul>

<style>
    @media print {
        .banner-wrapper {
            display: none;
        }
    }

    .banner-wrapper {
        display: flex;
        column-gap: 0.75rem;
        margin-top: 0.25rem;
    }

    .banner-item {
        text-decoration: underline;
    }
</style>
