---
type Props = {
    class?: string;
    keywords: string[];
};

const { keywords, class: className } = Astro.props;
---

<div class:list={[`keywords`, className]}>
    {keywords.map((keyword) => <span class={"keyword"}>{keyword}</span>)}
</div>

<style>
    .keywords {
        display: block;
        margin-left: -0.5rem;
    }

    .keyword {
        display: inline-block;
        line-height: 1.25;
        font-size: 0.875rem;
        padding: 0.25rem 0.5rem;
        border-radius: 6px;
        background-color: var(--colors-accent-o10);

        &:not(:last-child) {
            margin-right: 0.5rem;
        }
    }
</style>
