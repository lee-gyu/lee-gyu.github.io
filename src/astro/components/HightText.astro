---

type Props = {
    text: string;
};

const { text } = Astro.props;
---

<strong class="hover:text-teal-400 before:bg-neutral-50/30">{text}</strong>

<style>
    strong {
        position: relative;
        white-space: nowrap;
        word-break: keep-all;

        &::before {
            position: absolute;
            transition: all 0.1s linear;

            height: 4px;
            bottom: -2px;
            right: 0;
            left: 0;

            content: "";
            z-index: -1;
        }

        &:hover::before {
            height: calc(100% + 4px);
            right: -2px;
            left: -2px;
            border-radius: 4px;
        }
    }

    @media print {
        strong::after {
            content: none;
        }
    }
</style>