---
import PageTopActions from "src/solid/widget/PageTopActions";

const navListItems = [{ href: "/", label: "Home" }];

if (!import.meta.env.PROD)
    navListItems.push({ href: "/projects", label: "Projects" });

const lang = Astro.currentLocale as Lang;
const langPrefix = lang === "ko" ? "" : `/${lang}`;
const isProd = import.meta.env.PROD;
---

<header class="header">
    <PageTopActions lang={lang} client:only />
</header>

<style>
    .header {
        display: flex;
        position: sticky;
        align-items: center;
        top: 0;
        padding: 0.75rem 1rem 0.75rem 2.5rem;
        backdrop-filter: blur(1px);
        z-index: 1;
        height: 3.5rem;
    }
</style>
