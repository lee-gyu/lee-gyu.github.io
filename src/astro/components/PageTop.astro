---
import PageTopActions from "src/solid/widget/PageTopActions";

const navListItems = [{ href: "/", label: "Home" }];

if (!import.meta.env.PROD)
    navListItems.push({ href: "/projects", label: "Projects" });

const lang = Astro.currentLocale as Lang;
const langPrefix = lang === "ko" ? "" : `/${lang}`;
---

<header class="header">
    <nav>
        <ul class="nav-list">
            {
                navListItems.map(({ href, label }) => (
                    <li>
                        <a href={`${langPrefix}${href}`}>{label}</a>
                    </li>
                ))
            }
        </ul>
    </nav>
    <PageTopActions lang={lang} client:only />
</header>

<style>
    .header {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        display: flex;
        align-items: center;
        padding: 0.75rem 1rem 0.75rem 2.5rem;
    }

    .nav-list {
        display: flex;
        gap: 0.875rem;
        height: 28px;

        a {
            text-transform: uppercase;
            font-weight: 600;
            opacity: 0.8;

            &:hover {
                opacity: 1;
            }
        }
    }
</style>
